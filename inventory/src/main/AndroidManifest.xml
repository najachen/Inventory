<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="silver.reminder.inventory">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".InventoryMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".InventoryCreateActivity" />
        <activity android:name=".InventoryHomeActivity" />
        <activity android:name=".InventoryItemviewActivity" />
        <activity android:name=".InventoryUserActivity" />
        <activity android:name=".InventoryLocationActivity" />
        <activity android:name=".InventoryStockActivity" />
        <activity
            android:name=".InventoryCategoryActivity"
            android:label="@string/title_activity_temp"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".InventoryExpiredActivity"
            android:label="@string/title_activity_inventory_expired"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".InventoryMineActivity"
            android:label="@string/title_activity_inventory_mine"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".InventoryCreatePicture"></activity>
    </application>

</manifest>